---
/* Google fonts via npm (recommended) */
import "@fontsource/adlam-display/400.css";
import "@fontsource/ar-one-sans/400.css";
import "@fontsource/ar-one-sans/500.css";
import "@fontsource/ar-one-sans/600.css";
import "@fontsource/ar-one-sans/700.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Marketing Site</title>
  </head>

  <body class="font-body antialiased">
    <slot />
  </body>
</html>

<style>
  :root {
    --font-title: "ADLaM Display", serif;
    --font-body: "AR One Sans", system-ui, sans-serif;
    --background: #1a1a1a;
    --foreground: #f8f8f8;
    --primary: #f25c54;
    --secondary: #faf3dd;
    --card: #333333;
  }

  .font-title {
    font-family: var(--font-title);
  }

  .font-body {
    font-family: var(--font-body);
  }
</style>
